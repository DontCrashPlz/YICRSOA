<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_common_titlebar2"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.hnsi.zheng.hnti_erp_app.widgets.NestedListView
                android:id="@+id/matter_lv_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dividerHeight="0.5dp"
                android:divider="@color/divideGrey"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/divideGrey"/>

            <TextView
                android:id="@+id/matter_tv_history"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="审批纪录"
                android:textSize="18dp"
                android:textColor="@color/listTextGrey"
                android:gravity="center"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/divideGrey"/>

            <com.hnsi.zheng.hnti_erp_app.widgets.NestedListView
                android:id="@+id/matter_lv_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dividerHeight="0.5dp"
                android:divider="@color/divideGrey"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/divideGrey"/>

        </LinearLayout>

    </ScrollView>



</LinearLayout>