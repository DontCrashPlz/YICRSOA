<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundGrey">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/backgroundBlue">

        <TextView
            android:id="@+id/titlebar_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hnsi"
            android:layout_centerInParent="true"
            android:textColor="@color/textWhite"
            android:textSize="22dp"/>

        <ImageButton
            android:id="@+id/titlebar_ibtn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back_icon"
            android:background="@drawable/back_button_background_selector"
            android:layout_centerVertical="true"
            android:padding="14dp"/>

        <LinearLayout
            android:id="@+id/msg_titlebar_weather_panel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:clickable="true"
            android:visibility="gone">

            <ImageView
                android:id="@+id/msg_titlebar_weather_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/weather_wicon_sunny"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/msg_titlebar_weather"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/msg_titlebar_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0°"
                android:textColor="@android:color/white"
                android:textSize="16dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"/>

        </LinearLayout>

    </RelativeLayout>

