                android:layout_height="32dp"
                android:background="#e6e6e6">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="快捷办公"
                    android:textSize="13dp"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="14dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <RelativeLayout
                        android:id="@+id/apply_btn_new"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/apply_icon_news"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/apply_new"
                            android:layout_centerHorizontal="true"
                            android:paddingRight="6dp"
                            android:paddingTop="4dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="新闻"
                            android:textSize="13dp"
                            android:textColor="@android:color/black"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/apply_icon_news"/>
                        <TextView
                            android:id="@+id/apply_tv_num_news"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:background="@drawable/circle_background_red"
                            android:text="99+"
                            android:textSize="10dp"
                            android:textColor="@android:color/white"
                            android:layout_alignRight="@+id/apply_icon_news"
                            android:visibility="invisible"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <RelativeLayout
                        android:id="@+id/apply_btn_notice"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/apply_icon_notice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/apply_notice"
                            android:layout_centerHorizontal="true"
                            android:paddingRight="6dp"
                            android:paddingTop="4dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="公告"
                            android:textSize="13dp"
                            android:textColor="@android:color/black"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/apply_icon_notice"/>
                        <TextView
                            android:id="@+id/apply_tv_num_notice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:background="@drawable/circle_background_red"
                            android:text="99+"
                            android:textSize="9dp"
                            android:textColor="@android:color/white"
                            android:layout_alignRight="@+id/apply_icon_notice"
                            android:visibility="invisible"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <RelativeLayout
                        android:id="@+id/apply_btn_msg"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/apply_icon_msg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/apply_msg"
                            android:layout_centerHorizontal="true"
                            android:paddingRight="6dp"
                            android:paddingTop="4dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="消息"
                            android:textSize="13dp"
                            android:textColor="@android:color/black"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/apply_icon_msg"/>
