<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/item_news_withimg"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/item_news_img"
            android:layout_width="104dp"
            android:layout_height="78dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="12dp"
            android:src="@mipmap/default_loading"/>

        <TextView
            android:id="@+id/item_news_img_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/item_news_img"
            android:layout_toRightOf="@+id/item_news_img"
            android:layout_marginRight="18dp"
            android:text="新闻标题"
            android:textSize="16dp"
            android:textColor="#444444"
            android:maxLines="2"
            />

        <TextView
            android:id="@+id/item_news_img_kind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item_news_img"
            android:layout_toRightOf="@+id/item_news_img"
            android:text="新闻类型"
            android:textSize="11dp"
            android:textColor="#a3a3a3"/>

        <TextView
            android:id="@+id/item_news_img_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item_news_img"
            android:layout_alignParentRight="true"
            android:text="2000-01-01"
            android:textSize="11dp"
            android:textColor="#a3a3a3"
            android:layout_marginRight="18dp"/>

        <TextView
            android:id="@+id/item_news_img_department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布部门"
            android:textSize="11dp"
            android:textColor="#a3a3a3"
            android:layout_toLeftOf="@+id/item_news_img_time"
            android:layout_alignBottom="@+id/item_news_img"
            android:layout_marginRight="4dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_news_withoutimg"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:background="@android:color/white"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingBottom="10dp"
        android:paddingRight="18dp">

        <TextView
            android:id="@+id/item_news_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="新闻标题"
            android:textColor="#444444"
            android:textSize="16dp"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/item_news_kind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:text="新闻类型"
            android:textSize="11dp"
            android:textColor="#a3a3a3"/>

        <TextView
            android:id="@+id/item_news_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="2000-01-01"
            android:textSize="11dp"
            android:textColor="#a3a3a3"/>

        <TextView
            android:id="@+id/item_news_department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="发布部门"
            android:textColor="#a3a3a3"
            android:textSize="11dp"
            android:layout_toLeftOf="@+id/item_news_time"
            android:layout_marginRight="4dp"/>

    </RelativeLayout>

</LinearLayout>