<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/layout_common_titlebar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/msg_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题"
            android:textSize="16dp"
            android:textColor="#343434"
            android:layout_margin="15dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/msg_detail_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="未知"
            android:textSize="13dp"
            android:textColor="#989898"
            android:layout_margin="12dp"
            android:layout_toRightOf="@+id/msg_detail_title"
            android:gravity="center_vertical|end"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="#d6d7d4"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/msg_detail_msgtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="类型"
            android:textSize="16dp"
            android:textColor="#343434"
            android:layout_margin="15dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/msg_detail_tv_msgtype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="未知"
            android:textSize="13dp"
            android:textColor="#989898"
            android:layout_margin="12dp"
            android:layout_toRightOf="@+id/msg_detail_msgtype"
            android:gravity="center_vertical|end"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="#d6d7d4"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/msg_detail_sendname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送人"
            android:textSize="16dp"
            android:textColor="#343434"
            android:layout_margin="15dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/msg_detail_tv_sendname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="未知"
            android:textSize="13dp"
            android:textColor="#989898"
            android:layout_margin="12dp"
            android:layout_toRightOf="@+id/msg_detail_sendname"
            android:gravity="center_vertical|end"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="#d6d7d4"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/msg_detail_department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送部门"
            android:textSize="16dp"
            android:textColor="#343434"
            android:layout_margin="15dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/msg_detail_tv_department"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="未知"
            android:textSize="13dp"
            android:textColor="#989898"
            android:layout_margin="12dp"
            android:layout_toRightOf="@+id/msg_detail_department"
            android:gravity="center_vertical|end"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="#d6d7d4"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/msg_detail_sendtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送时间"
            android:textSize="16dp"
            android:textColor="#343434"
            android:layout_margin="15dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/msg_detail_tv_sendtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="未知"
            android:textSize="13dp"
            android:textColor="#989898"
            android:layout_margin="12dp"
            android:layout_toRightOf="@+id/msg_detail_sendtime"
            android:gravity="center_vertical|end"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="#d6d7d4"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/msg_detail_receivename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="接收人"
            android:textSize="16dp"
            android:textColor="#343434"
            android:layout_margin="15dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/msg_detail_tv_receivename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="未知"
            android:textSize="13dp"
            android:textColor="#989898"
            android:layout_margin="12dp"
            android:layout_toRightOf="@+id/msg_detail_receivename"
            android:gravity="center_vertical|end"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="#d6d7d4"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/msg_detail_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消息内容"
            android:textSize="16dp"
            android:textColor="#343434"
            android:layout_margin="15dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/msg_detail_tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="未知"
            android:textSize="13dp"
            android:textColor="#989898"
            android:layout_margin="12dp"
            android:layout_toRightOf="@+id/msg_detail_content"
            android:gravity="center_vertical|end"
            android:lineSpacingExtra="3dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="#d6d7d4"/>

</LinearLayout>